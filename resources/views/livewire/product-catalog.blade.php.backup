    @openProductModal.window="
        showModal = true;
        selectedProduct = $event.detail.productId;
        currentImageIndex = 0;
        loading = true;
        productDetails = null;
        
        // Llamada AJAX directa
        fetch(`/product-details/${selectedProduct}`)
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Product details received:', data);
            productDetails = data;
            
            // Configurar las im치genes
            if (data.images_url && data.images_url.length > 0) {
                images = data.images_url;
            } else if (data.product && data.product.image_url) {
                images = [data.product.image_url];
            } else {
                images = ['/images/placeholder.png'];
            }
            console.log('Images configured:', images);
            loading = false;
        })
        .catch(error => {
            console.error('Error fetching product details:', error);
            loading = false;
            // Mostrar error al usuario
            alert('Error al cargar los detalles del producto');
        });
